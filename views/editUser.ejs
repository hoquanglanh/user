<!-- views/editUser.ejs -->

<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chỉnh Sửa Người Dùng</title>
  <!-- Thêm Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-header text-center">
            <h2>Chỉnh Sửa Người Dùng</h2>
          </div>
          <div class="card-body">
            <form action="/update/<%= user._id %>" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Tên:</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>" placeholder="Nhập tên mới" required>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" placeholder="Nhập email mới" required>
              </div>

              <button type="submit" class="btn btn-success w-100">Cập Nhật</button>
            </form>
          </div>
        </div>
        <div class="text-center mt-3">
          <a href="/users" class="btn btn-secondary">Hủy bỏ</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Thêm Bootstrap JS và Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
