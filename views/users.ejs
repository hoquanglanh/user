<!-- views/users.ejs -->

<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh Sách Người Dùng</title>
  <!-- Thêm Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h2 class="text-center mb-4">Danh Sách Người Dùng</h2>

    <div class="card shadow-sm">
      <div class="card-body">
        <ul class="list-group">
          <% if (users.length === 0) { %>
            <li class="list-group-item text-center">Chưa có người dùng nào!</li>
          <% } else { %>
            <% users.forEach(user => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= user.name %></strong> - <%= user.email %>
                </div>
                <div>
                  <a href="/edit/<%= user._id %>" class="btn btn-sm btn-warning me-2">Sửa</a>
                  <a href="/delete/<%= user._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                </div>
              </li>
            <% }) %>
          <% } %>
        </ul>
      </div>
    </div>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-primary">Thêm Người Dùng Mới</a>
    </div>
  </div>

  <!-- Thêm Bootstrap JS và Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
